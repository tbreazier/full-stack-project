<div class="row post-row">
        <section class="card-post">
            <div class="card-post-header">
                <h2>Edit Post</h2>
            </div>
            <form class="edit-post-form" id="edit-post-form">
                <div class="edit-input-container edit-title">
                    <label for="post-title"></label>
                    <textarea class="card-input-textarea" name="post-title" value="{{user.first}}" placeholder="Title"></textarea>
                </div>

                <div class="edit-input-container edit-content">
                    <label for="post-content"></label>
                    <textarea class="card-input-textarea" name="post-content" value="{{post.content}}" placeholder="Content"></textarea>
                </div>
               
                <div class="edit-input-container">
                    <button class="card-button" type="submit" id="save-post-btn">Save Post</button>
                    <button class="card-button" type="button" id="delete-post-btn">Delete post</button>
                </div>
            
            </form>
        </section>
</div>


<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>