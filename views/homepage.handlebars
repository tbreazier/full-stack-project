</nav>

<div class="main-container">
    <div class="row post-row">
        <div id="text-posts" class="posts-container col-md-6">
            <a href="/viewposts" class="post-column-title" style="text-decoration: none;"><h2 class="text-center" style="color: rgb(0, 0, 0); text-shadow: 1px 1px 1px rgb(255, 255, 255);">[ View Posts ]</h2></a>
            {{#each posts as |post|}}
            <div class="post" style="text-overflow: ellipsis; overflow: hidden;">
                <a href="/editpost/{{id}}" style="text-decoration: none; color: white; word-break:break-all;" class="clickable-post"><h4>{{content}}</h4></a>
            </div>
            {{/each}}
        </div>
    
        <div id="trending-posts" class="posts-container col-md-6">
            <a href="/viewtrending" class="post-column-title" style="text-decoration: none;"><h2 class="text-center" style="color: rgb(0, 0, 0); text-shadow: 1px 1px 1px rgb(255, 255, 255);">[ View Reddit Trending ]</h2></a>
            {{#each redditData as |reddit|}}
            <div class="post" style="text-overflow: ellipsis; overflow: hidden;">
                <a style="text-decoration: none; color: white;" href="{{url}}"><h4>{{title}}</h4></a>
            </div>
            {{/each}}
        </div>
    </div>
    <script src="javascript/logout.js"></script>
    <script src="javascript/contact.js"></script>
