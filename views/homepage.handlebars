<nav class="navbar navbar-expand-lg navbar-light">

    <div class="back-button-container col-md-4">
        <a href="/" type="button" name="goback" class="btn btn-info btn-md" id="go-back-btn">Go Back</a>
    </div>

    <div class="text-center homepage-title-plus-container col-md-4">
        <h1 class="text-center">Simple Social</h1>
        <a href="/create" id="create-post-btn"><i class="fas fa-plus"
                style="font-size: 60px; color: rgb(0, 0, 0);"></i></a>
    </div>

    <div class="text-center col-md-2">
    </div>

    <div class="text-center user-info col-md-2">
        <i class="fab fa-joomla" style="font-size: 38px;"></i>
        <h6>{{ name }}</h6>
        <span class="badge" style="color: rgb(231, 218, 31);">{{ avatar }}</span>
    </div>

</nav>

<div class="row post-row">
    <div id="text-posts col-md-4" class="posts-container">
        {{#each posts as |post|}}
        <div class="post">
            <h4>{{post_text}}</h4>
        </div>
        {{/each}}
    </div>

    <div id="text-posts col-md-4" class="posts-container">
        {{#each photos as |photo|}}
        <div class="post">
           <h4>{{content}}</h4>
        </div>
        {{/each}}
    </div>

    <div id="text-posts col-md-4" class="posts-container">
        {{#each trendingposts as |trending|}}
        <div class="post">
            <h4>{{title}}</h4>
        </div>
        {{/each}}
    </div>
</div>