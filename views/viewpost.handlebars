<nav class="navbar navbar-expand-lg navbar-light">
        
        <div class="col-md-4">
            <div class="sign-up-buttons">
                <button type="submit" name="invite" class="btn btn-info btn-md" id="go-back-btn" value="Go Back">Invite</button>
            </div>
        </div>

        <div class="text-center homepage-title-plus-container col-md-4">
            <a href="/home" style="text-decoration: none; color: rgb(0, 0, 0);"><h1 class="text-center" style="font-size: 62px;">Simple Social</h1></a>
            <a href="/create" id="create-post-btn" style="text-decoration: none; font-size: 32px;"><i class="fas fa-plus" style="font-size: 40px; color: rgb(20, 117, 33); text-shadow: 1px 1px 1px black;"></i> Create Post</a>
        </div>

        <div class="text-center col-md-2">
        </div>

        <div class="text-center user-info col-md-2">
            <img src="https://ui-avatars.com/api/?name={{user.first}}+{{user.last}}?color=ff0000">
            <h6>{{user.first}}{{user.last}}</h6>
            <div class="log-out-btn-container">
                <a href="/" type="button" name="logout" class="btn btn-info btn-md" id="log-out-btn">Log Out</a>
